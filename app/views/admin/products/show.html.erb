<div class="container">
  <div class="col-md-10 mx-auto mt-5">
    <div class="row justify-content-center mb-5">
      <div class="col-md-4 headline">
        <h4>商品詳細</h4>
      </div>
    </div>

    <div class="row d-flex justify-content-center">
      <div class="col-md 4d-flex text-center justify-content-center align-items-center">
        <%= image_tag @product.image, size: "200x200" %>
      </div>
      <div class="col-md-8 d-flex justify-content-center mr-5"  style="background-color: #dcdcdc;" >
        <table class="table table-borderless">
          <thead>
            <tr>
              <th scope="col" style="width: 25%"></th>
              <th scope="col" style="width: 75%"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>商品名</td>
              <td><%= @product.name %></td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td><%= @product.description %></td>
            </tr>
            <td> 税抜価格 </br>
             (税込価格)
            </td>
            <tr>
              <td valign="middle">
              ￥<%= p @product.price.to_s(:delimited) %>(<%= @product.tax_price %>)円
              </td>
            </tr>
            <tr>
              <td>販売ステータス</td>
              <td><% if @product.sells_status == "sale" %>
                    <p style = "color: #4ec51e;">在庫有り</p>
                  <% else %>
                    <p style = "color: #ff3838;">入荷待ち</p>
                  <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <div class=" mt-3 text-center">
      <%= link_to "編集する", edit_admin_product_path(@product.id), class: "btn w-25 mt-3 change_button", style: "background-color:#8fbc8f;" %>
    </div>
  </div>
</div>
            
