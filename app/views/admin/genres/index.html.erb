<div class="container">
  <div class="row">
    <div class="gener-group ml-5">
      <div class="title pt-4 ml-5">
        <h4 class="text-center bg-light">ジャンル一覧・追加</h4>
      </div>
    </div>
  </div>
    <%= form_with model: @new_genre, url: admin_genres_path do |f| %>
      <div class="row pt-5">
        <div class="form-group">
          <%= f.label :ジャンル名 %>
        </div>
        <div class="form-group col-3">
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      </div>
      <% end %>
      <div class="row">
        <div class="col-4">
          <table class="table pt-5">
            <thead>
              <tr class="bg-light">
                <th>ジャンル名</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @genres.each do |genre| %>
                <tr>
                  <td><%= genre.name %></td>
                  <td class="text-right"><%= link_to "編集する", edit_admin_genre_path(genre), class: 'btn btn-success' %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
</div>