<div class="container">
  <div class="row pt-5 pl-5 ml-5">
    <div class="customer-group">
      <div class="title">
        <h3 class="text-center bg-light">お客様一覧</h3>
      </div>
    </div>
  </div>
    <div class="row pt-5 justify-content-center">
      <div class="col-9">
        <table class="table">
          <thead class="bg-light text-center">
            <tr>
              <th>会員ID</th>
              <th>会社名</th>
            </tr>
          </thead>
          <tbody>
          <% @customers.each do |customer| %>
            <tr class="text-center">
              <td><%= customer.id %></td>
              <td>
              <%= link_to admin_customer_path(customer.id) do %>
                <%= customer.name %>
              <% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="pagination d-flex justify-content-center mb-4">
      <%= paginate @customers %>
    </div>
</div>