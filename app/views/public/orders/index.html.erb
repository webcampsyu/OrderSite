<h5 class = "ml-5 my-4" >
  <strong style="background-color:#EEEEEE;">注文履歴一覧</strong>
</h5>
<div class = "col-11 m-auto">
  <table class = "table table-bordered">
    <tr>
      <th>注文日</th>
      <th>現場名</th>
      <th>注文商品</th>
      <th>金額</th>
      <th>注文詳細</th>
    </tr>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
      <td>
        <%= order.site_name %><br>
        <%= order.address %><br>
      </td>
      <td>
        <% order.order_details. each do |order_detail| %>
          <%= order_detail.product.name %><br>
        <% end %>
      </td>
      <td><%= order.price.to_s(:delimited) %></td>
      <td><%= link_to "表示する", order_path(order.id) %></td>
    </tr>
    <% end %>
  </table>
</div>
 