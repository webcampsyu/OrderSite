<div class="ml-5">
  <h5 class="ml-5 my-4"><strong style="background-color: #EEEEEE;">現場名登録/一覧</strong></h5>
  <%= form_with model: @site_name do |f| %>
    <table>
      <%= f.hidden_field :customer_id, value: current_customer.id %>
      <tr>
        <td><%= f.label :name, "現場名" %></td>
        <td><%= f.text_field :name, placeholder: "⚪︎⚪︎様邸" %></td>
        <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
      </tr>
      <tr>
        <td><%= f.label :address, "住所" %></td>
        <td><%= f.text_field :address, placeholder: "宮城県仙台市" %></td>
        <td></td>
      </tr>
    </table>
  <% end %>
</div>
<div class="ml-4 mr-5 mt-5">
  <table class="table table-bordered">
    <tr>
      <th>現場名</th>
      <th>住所</th>
      <th></th>
    </tr>
    <% @site_names.each do |site_name| %>
      <tr>
        <td><%= site_name.name %></td>
        <td><%= site_name.address %></td>
        <td>
          <%= link_to "編集", edit_site_name_path(site_name.id), class: "btn btn-success" %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
